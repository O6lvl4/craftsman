{
  "name": "craftsman",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "dev:api": "node --loader ts-node/esm src/index.ts",
    "cli": "node bin/craftsman.js",
    "dev:cli": "tsx src/cli/index.tsx",
    "build": "tsc --project tsconfig.json",
    "pretest": "npm run build",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:e2e": "NODE_OPTIONS='--experimental-vm-modules' jest --testMatch='**/test/e2e/**/*.test.js'"
  },
  "bin": {
    "craftsman": "bin/craftsman.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "figlet": "^1.9.3",
    "ink": "^4.4.1",
    "ink-select-input": "^5.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^5.0.1",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "luxon": "^3.4.4",
    "react": "^18.2.0",
    "tslib": "^2.6.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/figlet": "^1.7.0",
    "@types/js-yaml": "^4.0.9",
    "@types/luxon": "^3.3.3",
    "@types/node": "^20.11.17",
    "@types/react": "^18.2.45",
    "@types/yargs": "^17.0.24",
    "jest": "^29.7.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5"
  }
}
